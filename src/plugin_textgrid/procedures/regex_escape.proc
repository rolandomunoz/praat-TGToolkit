procedure regexEscape: .string
  .string = replace$(.string, "\", "\\", 0)
  .string = replace$(.string, "^", "\^", 0)
  .string = replace$(.string, "$", "\$", 0)
  .string = replace$(.string, "{", "\{", 0)
  .string = replace$(.string, "}", "\}", 0)
  .string = replace$(.string, "[", "\[", 0)
  .string = replace$(.string, "]", "\]", 0)
  .string = replace$(.string, "(", "\(", 0)
  .string = replace$(.string, ")", "\)", 0)
  .string = replace$(.string, ".", "\.", 0)
  .string = replace$(.string, "*", "\*", 0)
  .string = replace$(.string, "+", "\?", 0)
  .string = replace$(.string, "?", "\?", 0)
  .string = replace$(.string, "|", "\|", 0)
  .string = replace$(.string, "<", "\<", 0)
  .string = replace$(.string, ">", "\>", 0)
  .string = replace$(.string, "-", "\-", 0)
  .string = replace$(.string, "&", "\&", 0)
  .return$ = .string
endproc
